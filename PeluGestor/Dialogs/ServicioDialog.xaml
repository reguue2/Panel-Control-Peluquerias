<Window x:Class="PeluGestor.Dialogs.ServicioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servicio"
        Height="360"
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="12"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="160,*">

        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtNombre"
                 Grid.Row="0"
                 Grid.Column="1"
                 MaxLength="100"/>

        <TextBlock Text="Descripcion:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtDescripcion"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,12,0,0"
                 MaxLength="255"/>

        <TextBlock Text="Precio:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtPrecio"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="0,12,0,0"
                 MaxLength="10"/>

        <TextBlock Text="Duracion (min):" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtDuracion"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="0,12,0,0"
                 MaxLength="4"/>

        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">

            <Button x:Name="BtnCancelar"
                    Content="Cancelar"
                    Width="110"
                    Margin="0,0,8,0"
                    Click="btnCancelar"/>

            <Button x:Name="BtnGuardar"
                    Content="Guardar"
                    Width="110"
                    Click="btnGuardar"/>
        </StackPanel>
    </Grid>
</Window>
