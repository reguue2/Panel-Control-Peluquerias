<Window x:Class="PeluGestor.Dialogs.PeluqueriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Peluqueria"
        Height="360"
        Width="520"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtNombre"
                 Grid.Row="0"
                 Grid.Column="1"
                 MaxLength="100"/>

        <TextBlock Text="Direccion:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtDireccion" Grid.Row="1" Grid.Column="1" Margin="0,12,0,0"/>

        <TextBlock Text="Telefono:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtTelefono" Grid.Row="2" Grid.Column="1" Margin="0,12,0,0"/>

        <TextBlock Text="Horario:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtHorario" Grid.Row="3" Grid.Column="1" Margin="0,12,0,0"/>

        <TextBlock Text="Dias cerrados:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,12,0,0"/>
        <TextBox x:Name="TxtDias" Grid.Row="4" Grid.Column="1" Margin="0,12,0,0"/>

        <StackPanel Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">

            <Button x:Name="BtnCancelar"
                    Content="Cancelar"
                    Width="110"
                    Margin="0,0,8,0"
                    Click="btnCancelar"/>

            <Button x:Name="BtnGuardar"
                    Content="Guardar"
                    Width="110"
                    Click="btnGuardar"/>
        </StackPanel>
    </Grid>
</Window>
