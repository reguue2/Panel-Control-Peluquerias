<Window x:Class="PeluGestor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PeluGestor.Views"
        Title="Gestoría de Peluquerías - Integrow"
        Icon="/Recursos/icono.ico"
        Height="720"
        Width="1200"
        MinHeight="600"  
        MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">

                <MenuItem Header="_Salir"
                    Click="Salir_Click">
                    <MenuItem.Icon>
                        <Image Source="/Recursos/salir.png"
                           Width="16"
                           Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="_Gestion">

                <MenuItem Header="Peluquerias"
                    Click="Peluquerias_Click">
                    <MenuItem.Icon>
                        <Image Source="/Recursos/tijera.png"
                   Width="16"
                   Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Peluqueros"
              Click="Peluqueros_Click">
                    <MenuItem.Icon>
                        <Image Source="/Recursos/peluquero.png"
                   Width="16"
                   Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Servicios"
              Click="Servicios_Click">
                    <MenuItem.Icon>
                        <Image Source="/Recursos/servicio.png"
                   Width="16"
                   Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Reservas"
              Click="Reservas_Click">
                    <MenuItem.Icon>
                        <Image Source="/Recursos/reserva.png"
                   Width="16"
                   Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="_Ayuda">
                <MenuItem Header="Acerca de" Click="AcercaDe_Click"/>
            </MenuItem>
        </Menu>

        <ContentControl x:Name="MainContent"
                        Margin="8"/>
        
    </DockPanel>
</Window>
