<UserControl x:Class="PeluGestor.Views.ServiciosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Peluqueria:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CmbPeluqueria"
                      Width="260"
                      Margin="6,0"
                      DisplayMemberPath="Nombre"
                      SelectedValuePath="Id"
                      SelectionChanged="CmbPeluqueria_SelectionChanged"/>

            <Button Content="Nuevo" Width="110" Margin="10,0,0,0" Click="btnNuevo"/>
            <Button Content="Editar" Width="110" Margin="6,0,0,0" Click="btnEditar"/>
            <Button Content="Eliminar" Width="110" Margin="6,0,0,0" Click="btnEliminar"/>

            <TextBlock Text="Buscar:" Margin="20,0,6,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtBuscar" Width="220" TextChanged="TxtBuscar_TextChanged"/>
        </StackPanel>

        <DataGrid x:Name="Grid"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="QuitarColumnas"
                  IsReadOnly="True"
                  SelectionMode="Single"        
                  SelectionUnit="FullRow"/>
    </DockPanel>
</UserControl>
