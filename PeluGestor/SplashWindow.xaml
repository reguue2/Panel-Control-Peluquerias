<Window x:Class="PeluGestor.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="1200"
        Height="720"
        Background="#1c1e45"
        AllowsTransparency="True">

    <Grid>

        <Image Source="/Recursos/Logo Integrow.jpg"
               Width="689"
               Stretch="Uniform"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" Height="390"/>

        <StackPanel VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,120">

            <ProgressBar Width="320"
                         Height="12"
                         IsIndeterminate="True"/>

            <TextBlock Text="Cargando aplicacion..."
                       FontSize="13"
                       Margin="0,14,0,0"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
