<Window x:Class="PeluGestor.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="420"
        Height="260"
        Background="#2B2B2B"
        AllowsTransparency="True">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="PeluGestor"
                       FontSize="34"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Gestion de peluquerias"
                       FontSize="14"
                       Margin="0,8,0,0"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"/>

            <ProgressBar Width="220"
                         Height="10"
                         Margin="0,25,0,0"
                         IsIndeterminate="True"/>

            <TextBlock Text="Cargando aplicacion..."
                       FontSize="12"
                       Margin="0,12,0,0"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
